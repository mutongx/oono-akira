generator client {
    provider = "prisma-client-py"
    interface = "asyncio"
    recursive_type_depth = -1
}

datasource db {
    provider = "sqlite"
    url = "file:.oono/oono.db"
}

model Workspace {
    id String @id
    name String
    botId String
    adminId String
    hookUrl String
    token String
    createdAt DateTime
    updatedAt DateTime
}

model Payload {
    id String @id @default(uuid())
    source String
    content String
    createdAt DateTime
}

model Session {
    key String @id
    content String
    createdAt DateTime
    updatedAt DateTime
}

model Lock {
    workspace String
    channel String
    module String
    @@id([workspace, channel, module])
}
